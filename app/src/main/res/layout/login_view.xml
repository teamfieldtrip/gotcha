<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:context="controller.LoginController">

    <android.support.v7.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical">

        <android.support.v7.widget.AppCompatImageView
            android:src="@drawable/gui_el_logo_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true" />

        <android.spirithunt.win.gui.CustomEditText style="@style/editText_normal_main"
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/username_hint"
            android:inputType="textEmailAddress"
            android:layout_marginBottom="7dp" />

        <android.spirithunt.win.gui.CustomEditText style="@style/editText_normal_main"
            android:id="@+id/password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password_hint"
            android:layout_below="@id/email"
            android:inputType="textPassword"
            android:layout_marginBottom="7dp" />

        <android.spirithunt.win.gui.CustomButton
            style="@style/btn_normal_main_large"
            android:id="@+id/login_button"
            android:text="@string/btn_login"
            android:onClick="submit"
            android:layout_marginBottom="25dp" />

        <android.spirithunt.win.gui.CustomTextView
            style="@style/textView_normal_main"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="25sp"
            android:text="@string/sign_up_text"
            android:onClick="signUp" />

    </android.support.v7.widget.LinearLayoutCompat>
</RelativeLayout>
