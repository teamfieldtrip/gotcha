<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@drawable/bg_main</item>
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppFullScreenTheme" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorSecondary">#fff</item>
    </style>

    <style name="AppDialog" parent="Theme.AppCompat.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/colorButtonText</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/colorText</item>
        <!-- Used for the background -->
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="AppPreferenceTheme" parent="@style/AppFullScreenTheme">
        <item name="colorAccent">#fff</item>
        <item name="android:textAppearanceListItem">@style/PreferenceTextAppearance</item>
    </style>

    <!-- Main Game view -->
    <style name="SpiritHunt.GameTitle" parent="@style/btn_lobster_default">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Define the preferencetext style -->
    <style name="PreferenceTextAppearance">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AppSignUpScreen" parent="@style/AppFullScreenTheme">
        <item name="windowActionBar">true</item>
    </style>

    <!-- Define the edittext style -->
    <style name="editText_normal_main" parent="@style/Widget.AppCompat.EditText">
        <item name="win.spirithunt.android:font">fonts/lobster.ttf</item>
        <item name="android:background">@drawable/edittext_normal_main</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
    </style>

    <!-- Define the textview style -->
    <style name="textView_normal_main" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="win.spirithunt.android:font">fonts/lobster.ttf</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Define the textview style -->
    <style name="textView_player" parent="@style/textView_normal_main">
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Define the textview style -->
    <style name="textView_normal_exo" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="win.spirithunt.android:font">fonts/exo-regular.ttf</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#80FFFFFF</item>
        <item name="android:inputType">none</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
    </style>

    <!-- Define the default Lobster font style -->
    <style name="btn_lobster_default" parent="@android:style/Widget.Button">
        <item name="win.spirithunt.android:font">fonts/lobster.ttf</item>
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">3</item>
    </style>

    <!-- Define button sizes -->
    <style name="btn_normal_small" parent="@style/btn_lobster_default">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="btn_normal_medium" parent="@style/btn_lobster_default">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="btn_normal_large" parent="@style/btn_lobster_default">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Define the "main" button -->
    <style name="btn_normal_main_small" parent="@style/btn_normal_small">
        <item name="android:background">@drawable/btn_normal_main_style</item>
    </style>
    <style name="btn_normal_main_medium" parent="@style/btn_normal_medium">
        <item name="android:background">@drawable/btn_normal_main_style</item>
    </style>
    <style name="btn_normal_main_large" parent="@style/btn_normal_large">
        <item name="android:background">@drawable/btn_normal_main_style</item>
    </style>

    <!-- Define the "red" button -->
    <style name="btn_normal_red_small" parent="@style/btn_normal_small">
        <item name="android:background">@drawable/btn_normal_red_style</item>
    </style>
    <style name="btn_normal_red_medium" parent="@style/btn_normal_medium">
        <item name="android:background">@drawable/btn_normal_red_style</item>
    </style>
    <style name="btn_normal_red_large" parent="@style/btn_normal_large">
        <item name="android:background">@drawable/btn_normal_red_style</item>
    </style>

    <!-- Define the "blue" button -->
    <style name="btn_normal_blue_small" parent="@style/btn_normal_small">
        <item name="android:background">@drawable/btn_normal_blue_style</item>
    </style>
    <style name="btn_normal_blue_medium" parent="@style/btn_normal_medium">
        <item name="android:background">@drawable/btn_normal_blue_style</item>
    </style>
    <style name="btn_normal_blue_large" parent="@style/btn_normal_large">
        <item name="android:background">@drawable/btn_normal_blue_style</item>
    </style>

    <!-- Define the "arrow" button -->
    <style name="btn_normal_arrow" parent="@android:style/Widget.Button">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">35dp</item>
    </style>
    <style name="btn_normal_arrow_left" parent="@style/btn_normal_arrow">
        <item name="android:background">@drawable/btn_left_normal</item>
    </style>
    <style name="btn_normal_arrow_right" parent="@style/btn_normal_arrow">
        <item name="android:background">@drawable/btn_right_normal</item>
    </style>

    <!-- Define powerup button -->
    <style name="btn_powerup" parent="@style/btn_normal_medium">
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:layout_marginEnd">3dp</item>
        <item name="android:layout_marginStart">3dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <color name="colorText">#CCFFFFFF</color>
</resources>
