<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:drawable="@drawable/btn_normal_main" />
    <item>
        <selector xmlns:android="http://schemas.android.com/apk/res/android" >
            <item android:state_pressed="true" >
                <shape android:shape="rectangle"  >
                    <corners android:radius="@dimen/button_border_radius" />
                    <gradient android:angle="90"
                        android:startColor="@color/colorButtonGradientStart"
                        android:centerColor="@color/colorButtonGradientMiddle"
                        android:endColor="@color/colorButtonGradientEnd"/>
                </shape>
            </item>
            <item android:state_focused="true">
                <shape android:shape="rectangle"  >
                    <corners android:radius="@dimen/button_border_radius" />
                </shape>
            </item>
            <item >
                <shape android:shape="rectangle"  >
                    <corners android:radius="@dimen/button_border_radius" />
                </shape>
            </item>
        </selector>
    </item>
</layer-list>
